{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Nb_reservation</th>
                <th>Nb_places_dispo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.Nom }}</td>
                <td>{{ event.Description }}</td>
                <td>{{ event.Date ? event.Date|date('Y-m-d') : '' }}</td>
                <td>{{ event.Lieu }}</td>
                <td>{{ event.nbReservation }}</td>
                <td>{{ event.nbPlacesDispo }}</td>
                <td>
                    <a href="{{ path('app_event_type_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_type_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_type_new') }}">Create new</a>
{% endblock %}
