
{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}


{% block body %}


       <div class="container">
        <h1>All Events</h1>
        <div class="row">
            {% for event in events %}
                <div class="col-md-6">
                    <div class="card custom-card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.Nom }}</h5>
<!-- <p class="card-text"><strong>Description:</strong> {{ event.Description }}</p> -->
                            <p class="card-text"><strong>Date:</strong> {{ event.Date ? event.Date|date('Y-m-d') : '' }}</p>
                            <p class="card-text"><strong>Lieu:</strong> {{ event.Lieu }}</p>
                            <p class="card-text"><strong>Nb_reservation:</strong> {{ event.nbReservation }}</p>
                            <p class="card-text"><strong>Nb_places_dispo:</strong> {{ event.nbPlacesDispo }}</p>
                                                        <a href="{{ path('app_event_type_show', {'id': event.id}) }}" class="btn btn-primary">Show Details</a>
<a href="{{ path('app_reservation_type_new', {'id': event.id}) }}" class="btn btn-primary">Reserver</a>
                        </div>
                    </div>
                </div>
                {% if loop.index is even %}
                    </div><div class="row">
                {% endif %}
            {% endfor %}
        </div>
    </div>
        <a href="{{ path('app_event_type_index') }}">back to list</a>
<style>
    .card-text {
                font-size: 18px; /* Adjust the font size as needed */

        font-family: "Times New Roman", Times, serif; /* Replace "Times New Roman" with the desired font name */
    }
.card-title {
    font-size: 40px; /* Adjust the font size as needed */
    font-family: "Times New Roman", Times, serif; /* Replace "Times New Roman" with the desired font name */
    color: #000; /* Set the initial color */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Add a subtle text shadow */
    background: linear-gradient(45deg, #000, #333); /* Add a gradient background */
    -webkit-background-clip: text; /* Clip the background to the text */
    -webkit-text-fill-color: transparent; /* Set the text color to transparent to show the background */
    animation: pulse 1s infinite alternate; /* Add a pulse animation effect */
}

@keyframes pulse {
    from {
        transform: scale(1);
    }
    to {
        transform: scale(1.05);
    }
}


</style>
{% endblock %}
