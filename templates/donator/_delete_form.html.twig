<form action="{{ path('app_donator_delete', {'id': donator.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donator.id) }}">
    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>
