{# templates/security/registration.html.twig #}

{% extends 'user/base.html.twig' %}

{% block title %}Registration{% endblock %}




{% block body %}
      <header>
    {% block header %}
        {{ parent() }} {# This includes the content of the 'header' block from the base template #}
    {% endblock %}    </header>
<div class="card custom-card ">
    <img src="{{ asset('img/donator.png') }}" class="card-img-top mx-auto d-block text-center" alt="Donator Image" style="max-width: 80px;">
    <div class="card-body">
        <h5 class="card-title text-center">Donator Signup</h5>
        <p class="card-text text-center">Support us by becoming a donator. Your contribution makes a difference!</p>
        {{ form_start(form) }}
        
            {# error global #}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {# show err msg #}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="form-group">
            {{ form_label(form.city) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {{ form_errors(form.city) }}
        </div>

        <div class="form-group">
            {{ form_label(form.country) }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control', 'style': 'border-color: red;'}}) }}
            {{ form_errors(form.country) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
