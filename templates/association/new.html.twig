{% extends 'base.html.twig' %}

{% block title %}New Association{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="container mt-4">
        <div class="card custom-card">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Create new Association</h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="association_name">Association Name</label>
                        <input type="text" class="form-control" id="association_name" placeholder="Enter association name">
                    </div>
                    <div class="form-group">
                        <label for="association_description">Description</label>
                        <textarea class="form-control" id="association_description" rows="3" placeholder="Enter association description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="association_action">Action</label>
                        <input type="text" class="form-control" id="association_action" placeholder="Enter association action">
                    </div>
                    <div class="form-group">
                        <label for="association_logo">Logo</label>
                        <input type="file" class="form-control-file" id="association_logo">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_association_index') }}" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
