{% extends 'admin-base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
 
    <div class="container">
        <h1 class="mt-4 mb-4">Dashboard</h1>



 {% for message in app.flashes('info') %}
                <div class="alert alert-success">
                {{ message}}
                </div>
                {% endfor %}

                {% for message in app.flashes('upd') %}
                <div class="alert alert-warning">
                {{ message}}
                </div>
                {% endfor %}

                   {% for message in app.flashes('del') %}
                <div class="alert alert-danger">
                {{ message}}
                </div>
                {% endfor %}



        






        <div class="row mb-3">
            <div class="col-md-6 offset-md-6">
                <form action="{{ path('app_association_index') }}" method="get" class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by Association Name..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Logo</th>
                        <th>Siteweb</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for association in associations %}
                        <tr>
                            <td>{{ association.id }}</td>
                            <td>{{ association.nom }}</td>
                            <td>{{ association.description }}</td>
                            <td><img src="{{ asset('uploads/img/' ~ association.logo) }}" alt="" style="width: 70px" style="height:70px"></td>
                            <td>{{ association.siteweb }}</td>
                            <td>
                                <a href="{{ path('app_association_show', {'id': association.id}) }}" class="btn btn-primary btn-sm">Show</a>
                                <a href="{{ path('app_association_edit', {'id': association.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                                <form action="{{ path('app_association_delete', {'id': association.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ association.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{path('trinom') }}"><i class="btn btn-danger" data-feather="arrow-down"></i>ascendant nom</a>
        <a href="{{path('trinomdes') }}"><i class="btn btn-danger" data-feather="arrow-down"></i>Descendent nom</a>

        <a class="btn btn-primary btn-block mt-3" href="{{ path('app_association_new') }}">Create new</a>
    </div>
{% endblock %}
