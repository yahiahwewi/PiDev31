{% extends 'base.html.twig' %}

{% block title %}New Project{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <div class="container">
        <h1>Create New Project</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <a href="{{ path('app_projects_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}




