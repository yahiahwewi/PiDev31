{% extends 'base.html.twig' %}

{% block title %}DonationsList{% endblock %}
{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Donation Details</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th scope="row">Id</th>
                                    <td>{{ donations_list.id }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Date</th>
                                    <td>{{ donations_list.date ? donations_list.date|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Montant</th>
                                    <td>{{ donations_list.montant }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <a href="{{ path('app_donations_list_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
                <a href="{{ path('app_donations_list_edit', {'id': donations_list.id}) }}" class="btn btn-primary ml-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-8">
                {{ include('donations_list/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
