{% extends 'admin-base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    
    <div class="container">
        <h1 class="mt-4 mb-4">Dashboard</h1>


         {% for message in app.flashes('info') %}
                <div class="alert alert-success">
                {{ message}}
                </div>
                {% endfor %}

                {% for message in app.flashes('upd') %}
                <div class="alert alert-warning">
                {{ message}}
                </div>
                {% endfor %}

                   {% for message in app.flashes('del') %}
                <div class="alert alert-danger">
                {{ message}}
                </div>
                {% endfor %}










           


















        <div class="row mb-3">
            <div class="col-md-6 offset-md-6">
                <form action="{{ path('app_conference_index') }}" method="get" class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by Conference Date or Location..." value="{{ app.request.query.get('search') }}">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>Lieu</th>
                        <th>Association</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for conference in conferences %}
                        <tr>
                            <td>{{ conference.id }}</td>
                            <td>{{ conference.date|date("Y-m-d") }}</td>
                            <td>{{ conference.lieu }}</td>
                            <td>{{ conference.association }}</td>
                            <td>
                                <a href="{{ path('app_conference_show', {'id': conference.id}) }}" class="btn btn-primary btn-sm">Show</a>
                                <a href="{{ path('app_conference_edit', {'id': conference.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                                <form action="{{ path('app_conference_delete', {'id': conference.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conference.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
           <span class="badge badge-sm bg-gradient-faded-success-vertical">  {{ knp_pagination_render(conferences) }} </span>
<br>

        <a class="btn btn-primary btn-block mt-3" href="{{ path('app_conference_new') }}">Create new</a>
    </div>
{% endblock %}




